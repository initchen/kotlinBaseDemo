<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mainVm"
            type="com.dawn.kotlinbasedemo.vm.MainVm" />
        <import type="com.dawn.lib_common.binding.recyclerview.DividerLine"/>

    </data>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dataList="@{mainVm.dataList}"
        app:adapter="@{mainVm.adapter}"
        app:lineManager='@{DividerLine.LineDrawMode.HORIZONTAL}'
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</layout>